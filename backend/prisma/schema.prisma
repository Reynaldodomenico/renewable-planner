generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model PanelType {
  id          String       @id @default(uuid())
  name        String       @unique
  manufacturer String
  efficiency  Float       
  wattage     Int         
  pricePerWatt Float      
  createdAt   DateTime     @default(now())
  simulations Simulation[]
}

model Location {
  id               String       @id @default(uuid())
  city             String
  country          String
  latitude         Float
  longitude        Float
  avgSunHoursPerDay Float   
  createdAt        DateTime     @default(now())
  simulations      Simulation[]

  @@unique([city, country])
}

model Simulation {
  id                String     @id @default(uuid())
  locationId        String
  panelTypeId       String
  roofSizeM2        Float      
  estimatedOutput   Float      
  estimatedCost     Float      
  estimatedROI      Float    
  createdAt         DateTime   @default(now())
  
  location          Location   @relation(fields: [locationId], references: [id])
  panelType         PanelType  @relation(fields: [panelTypeId], references: [id])
}